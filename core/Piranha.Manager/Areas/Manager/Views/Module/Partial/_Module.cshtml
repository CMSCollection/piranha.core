@model Piranha.Extend.IModule

<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-body module">
            <div class="row">
                <div class="col-xs-4">
                    <div class="thumbnail">
                        <img src="@Model.IconUrl">
                    </div>
                </div>
                <div class="col-xs-8">
                    <label>@Model.Name</label>
                    <p>@Model.Description</p>
                    <dl class="dl-horizontal">
                        <dt>Version</dt>
                        <dd>@Model.Version</dd>

                        <dt>Package URL</dt>
                        <dd><a href="@Model.PackageURL" target="blank">@Model.PackageURL</a></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
